{% extends 'base.html.twig' %}

{% block body %}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ asset('images/' ~ band.getPicture().getName()) }}" class="img-fluid rounded-start" alt="{{ band.getName() }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ band.getName() }}</h5>
                    <p class="card-text">{{ band.getDescription() }}</p>
                </div>
            </div>
        </div>
    </div>

    <div>
        <h1 class="mb-4">Their future concerts</h1>
        {% if concerts|length > 0 %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Hall</th>
                    </tr>
                </thead>
                <tbody>
                    {% for concert in concerts %}
                        <tr>
                            <td>{{ concert.getDate()|date('Y-m-d H:i') }}</td>
                            <td>{{ concert.getHall().getName() }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>No future concerts found for this band.</p>
        {% endif %}
    </div>
{% endblock body %}
